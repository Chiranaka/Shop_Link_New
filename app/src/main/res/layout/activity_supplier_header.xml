<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6F7FF"
    android:padding="16dp"
    tools:context=".SupplierHeader">

    <!-- Logo -->

    <!-- Shop Name -->
    <TextView
        android:id="@+id/txtShopLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_28pt_extrabold"
        android:text="ShopLink"
        android:textColor="@color/DarkBlue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/txtSuppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example text"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtShopLink" />


    <ImageButton
        android:id="@+id/imgBtnToUserAcc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/usericon2"
        android:background="@null"
        android:contentDescription="UserAccount"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnLogout"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/imgBtnLogout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/signouticon"
        android:background="@null"
        android:contentDescription="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
