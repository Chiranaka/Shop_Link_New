<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupplierUserProfileView"
    android:background="@color/LightestBlue">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/myprofileback"
        android:layout_marginEnd="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/> <!-- Replace 'your_image' with your drawable image file -->

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:id="@+id/txttopic"
            android:textSize="20dp"
            android:fontFamily="@font/inter_28pt_extrabold"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/DarkBlue"
            android:layout_marginBottom="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext"
            android:alpha="0.85"
            android:layout_marginBottom="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgShop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_edit3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>



                <TextView
                    android:id="@+id/txtShopName"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_28pt_extrabold"
                    android:textStyle="bold"
                    android:ems="10"
                    android:hint="Manju Super Center"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toEndOf="@+id/imgShop"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txtShopOwnerName"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:ems="10"
                    android:hint="D G R Rashin Prashastha"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toEndOf="@+id/imgShop"
                    app:layout_constraintTop_toBottomOf="@id/txtShopName"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:text="Email :"
                    android:textColor="@color/DarkBlue"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgShop" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:ems="10"
                    android:hint="rashinprashastha2002@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@+id/textView1"
                    app:layout_constraintTop_toBottomOf="@id/imgShop"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:text="Contact No :"
                    android:textColor="@color/DarkBlue"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtEmail" />

                <TextView
                    android:id="@+id/txtContactNo"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:ems="10"
                    android:hint="0778600138"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@id/txtEmail"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:text="Address :"
                    android:textColor="@color/DarkBlue"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtContactNo" />

                <TextView
                    android:id="@+id/txtShopAddress"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:ems="10"
                    android:hint="511 E, Lake Rd, Thalangama South"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@id/txtContactNo"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:text="Business Reg No :"
                    android:textColor="@color/DarkBlue"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtShopAddress" />

                <TextView
                    android:id="@+id/txtShopRegNo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:ems="10"
                    android:hint="REG001"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@id/txtShopAddress"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:text="Description :"
                    android:textColor="@color/DarkBlue"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtShopRegNo" />

                <TextView
                    android:id="@+id/txtShopDescription"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_24pt_medium"
                    android:textStyle="bold"
                    android:ems="10"
                    android:hint="All kind of stationary items"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@id/txtShopRegNo"
                    app:layout_constraintBottom_toBottomOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Edit Profile"
                android:layout_marginVertical="15dp"
                android:textSize="18sp"
                android:textColor="@color/DarkBlue"
                android:fontFamily="@font/inter_28pt_extrabold"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/LightBlue"
                android:foreground="@drawable/border_edit4"
                app:cornerRadius = "20dp"
                />

            <Button
                android:id="@+id/btnDeleteProfile"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Delete Profile"
                android:layout_marginVertical="15dp"
                android:textSize="18sp"
                android:textColor="@color/DarkBlue"
                android:fontFamily="@font/inter_28pt_extrabold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/LightBlue"
                android:foreground="@drawable/border_edit4"
                app:cornerRadius = "20dp"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


